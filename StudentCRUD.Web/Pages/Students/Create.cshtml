@page
@model StudentCRUD.Web.Pages.Students.CreateModel

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Student.Name" class="form-label"></label>
        <input asp-for="Student.Name" class="form-control" placeholder="Enter Name......">
        <span asp-validation-for="Student.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Student.Address" class="form-label"></label>
        <input asp-for="Student.Address" class="form-control" placeholder="Enter Address.....">
        <span asp-validation-for="Student.Address" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Create</button>
</form>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
